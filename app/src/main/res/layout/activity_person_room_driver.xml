<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.poputchic.android.activities.person_rooms.PersonRoomDriver">
    <RelativeLayout
        android:background="@color/black_100"
        android:id="@+id/toolbar_emulator"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/pr_iv_my_travels"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/car"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="22sp"
            android:textColor="@color/yallou"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/pr_iv_edit_profile"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/edit"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/toolbar_emulator"
        android:id="@+id/scroll_private_room_driver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RatingBar
                android:id="@+id/pr_rb_rating_bar"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:stepSize="0.1"
                android:isIndicator="true"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pr_tv_rating"
                android:textSize="27sp"
                android:gravity="center"
                tools:text="4.3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pr_CIV_image_driver"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher_background"
                android:layout_width="180dp"
                android:layout_height="180dp" />
            <TextView
                android:id="@+id/pr_tv_name"
                android:layout_marginTop="10dp"
                android:textColor="@color/black_100"
                android:textSize="22sp"
                tools:text="Игорь Иванов"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pr_tv_years"
                android:textSize="18sp"
                tools:text="36 лет"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pr_tv_email"
                android:textSize="18sp"
                android:textColor="@color/black_50"
                tools:text="example@gmail.com"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pr_tv_number_phone"
                android:textSize="18sp"
                android:textColor="@color/black_50"
                tools:text="+5478852144"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black_100">
            </View>
            <TextView
                android:id="@+id/pr_tv_car"
                android:textSize="18sp"
                android:textColor="@color/black_50"
                tools:text="BMW 3-Series 2015"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black_100">
            </View>
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="22sp"
                android:textColor="@color/black_50"
                tools:text="Отзывы"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ListView
                android:id="@+id/pr_lv_reviews"
                android:divider="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
