<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools">

    <android.support.v7.widget.Toolbar
        android:id="@+id/b_toolbar"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        android:gravity="center"
        android:background="@color/black_100"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="25sp"
                android:fontFamily="@font/lobster"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/yallou"
                android:text="@string/APP_NAME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/b_iv_find"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/b_find_icon"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:id="@+id/b_back"
                android:layout_marginStart="5dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_left_yellow"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ListView
        android:layout_margin="3dp"
        android:layout_below="@id/b_toolbar"
        android:id="@+id/b_main_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</RelativeLayout>