<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_driver"
            tools:src="@drawable/edit"
            android:layout_margin="3dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_companion"
                android:textAlignment="center"
                android:textSize="20sp"
                android:fontFamily="@font/comforta_regular"
                android:lines="1"
                android:textColor="@color/black_100"
                tools:text="Иванов Степан, 28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textAlignment="center"
                android:fontFamily="@font/comforta_light"
                android:textSize="16sp"
                android:id="@+id/about_driver"
                android:textColor="@color/black_100"
                tools:text="Спокойный парень, люблю путешествовать! Буду благодарен за попутку!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/phone_driver"
                android:fontFamily="@font/comforta_light"
                android:textColor="@color/black_50"
                android:textAlignment="center"
                android:lines="1"
                android:textSize="16sp"
                tools:text="+375259954872"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/black_50"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="@font/comforta_regular"
        android:lines="1"
        android:textColor="@color/black_100"
        android:text="Поездка"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/travel_from"
            android:gravity="center"
            android:fontFamily="@font/comforta_light"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="16sp"
            tools:text="Москва, ул. Чкалова 2"
            android:textColor="@color/black_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/travel_to"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight="1"
            android:fontFamily="@font/comforta_light"
            android:textSize="16sp"
            tools:text="Москва, ул. Чкалова 2"
            android:textColor="@color/black_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TextView
        android:id="@+id/cost"
        android:background="@color/yallou"
        tools:text="50 р"
        android:textColor="@color/black_100"
        android:textSize="20sp"
        android:fontFamily="@font/comforta_light"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_cancel"
            android:layout_margin="3dp"
            android:background="@color/red"
            android:drawableLeft="@drawable/close"
            android:layout_weight="1"
            android:fontFamily="@font/comforta_light"
            android:gravity="center"
            android:textAlignment="center"
            android:text="Отклонить"
            android:textColor="@color/black_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/button_ok"
            android:layout_margin="3dp"
            android:background="@color/green"
            android:drawableLeft="@drawable/ok"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/comforta_light"
            android:text="Принять"
            android:textColor="@color/black_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </TableRow>

</LinearLayout>