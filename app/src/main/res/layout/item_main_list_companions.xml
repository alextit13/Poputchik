<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:layout_margin="5dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/peoples"
        android:id="@+id/list_comp_image"
        android:layout_width="70dp"
        android:layout_height="70dp" />
    <TextView
        android:textColor="@color/black_100"
        android:fontFamily="@font/comforta_regular"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="Игорь Николаев"
        android:lines="1"
        android:id="@+id/list_comp_name"
        android:layout_toRightOf="@id/list_comp_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:fontFamily="@font/comforta_light"
        android:textAlignment="center"
        tools:text="Я хороший парень и люблю ездить везде"
        android:lines="1"
        android:textSize="16sp"
        android:id="@+id/list_comp_about"
        android:layout_toRightOf="@id/list_comp_image"
        android:layout_below="@id/list_comp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>