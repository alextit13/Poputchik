<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@android:drawable/dialog_holo_light_frame"
    android:layout_margin="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:layout_margin="5dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/peoples"
        android:id="@+id/list_comp_image"
        android:layout_width="70dp"
        android:layout_height="70dp" />
    <TextView
        android:textColor="@color/black_100"
        android:textAlignment="center"
        android:textSize="22sp"
        tools:text="Игорь Николаев"
        android:lines="1"
        android:id="@+id/list_comp_name"
        android:layout_toRightOf="@id/list_comp_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textAlignment="center"
        tools:text="Я хороший парень и люблю ездить везде"
        android:lines="1"
        android:id="@+id/list_comp_about"
        android:layout_toRightOf="@id/list_comp_image"
        android:layout_below="@id/list_comp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TableRow
        android:layout_toRightOf="@id/list_comp_image"
        android:layout_below="@id/list_comp_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/list_comp_years"
            android:textSize="18sp"
            android:textColor="@color/black_50"
            android:textAlignment="center"
            tools:text="37 лет"
            android:lines="1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TableRow
            android:gravity="end"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="end"
                android:src="@drawable/peoples"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/list_comp_num_review"
                android:layout_marginStart="4dp"
                android:gravity="start"
                tools:text="7"
                android:lines="1"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableRow>

</RelativeLayout>