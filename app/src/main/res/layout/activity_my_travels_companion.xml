<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.poputchic.android.activities.MyTravelsCompanion">
    <ImageView
        android:id="@+id/toolbar_my_travels"
        android:background="@color/black_100"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <ImageView
        android:id="@+id/back_button_my_travels"
        android:layout_marginTop="10dp"
        android:src="@drawable/back"
        android:layout_width="30dp"
        android:visibility="gone"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/activity_my_travels_companion"
        android:fontFamily="@font/comforta_light"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:textColor="@color/yallou"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--<ImageView
        android:background="@color/yallou"
        android:layout_below="@id/toolbar_my_travels"
        android:layout_width="match_parent"
        android:layout_height="240dp" />-->
    <TextView
        android:fontFamily="@font/comforta_light"
        android:id="@+id/logo_my_travels"
        android:layout_marginTop="40dp"
        android:layout_below="@id/toolbar_my_travels"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/black_100"
        android:text="@string/you_go_to_travel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ListView
        android:scrollIndicators="none"
        android:divider="@color/gray_10"
        android:dividerHeight="0dp"
        android:background="@color/gray_10"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/list_my_z"
        android:layout_below="@id/logo_my_travels"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
    </ListView>
    <TableRow
        android:id="@+id/bottom_bar"
        android:background="#3000"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:onClick="click"
            android:src="@drawable/my_account"
            android:layout_weight="1"
            android:id="@+id/b_menu_1"
            android:scaleY="0.5"
            android:scaleX="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:onClick="click"
            android:src="@drawable/exit_icon"
            android:layout_weight="1"
            android:scaleY="0.5"
            android:scaleX="0.5"
            android:id="@+id/b_menu_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:onClick="click"
            android:src="@drawable/icon_menu_add"
            android:layout_weight="1"
            android:id="@+id/b_menu_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:onClick="click"
            android:src="@drawable/my_cars"
            android:layout_weight="1"
            android:scaleY="0.5"
            android:scaleX="0.5"
            android:id="@+id/b_menu_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:onClick="click"
            android:src="@drawable/list"
            android:layout_weight="1"
            android:scaleY="0.5"
            android:scaleX="0.5"
            android:id="@+id/b_menu_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </TableRow>
</RelativeLayout>
