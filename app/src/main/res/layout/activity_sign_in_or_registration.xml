<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/container_s_o_r"
    android:background="#000"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reg_and_sign.SignInOrRegistration">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:textSize="25sp"
            android:fontFamily="@font/lobster"
            android:textColor="@color/yallou"
            android:text="@string/APP_NAME"
            android:id="@+id/c_toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/black_50">
        </TextView>
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/c_ll"
            android:gravity="center"
            android:layout_below="@id/a_text_reg"
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/c_b_sign_in"
                android:onClick="click_buttons"
                android:padding="4dp"
                android:textColor="#fff"
                android:background="@color/__picker_item_photo_border_n"
                android:text="@string/sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/c_b_registration"
                android:onClick="click_buttons"
                android:padding="4dp"
                android:layout_marginTop="4dp"
                android:textColor="#fff"
                android:background="@color/__picker_item_photo_border_n"
                android:text="@string/registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/progress_bar_sign_or_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>