<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="@drawable/background"
    android:id="@+id/container_s_o_r"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.reg_and_sign.SignInOrRegistration">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Toolbar
            android:id="@+id/toolbar_si"
            android:background="#3000"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_gravity="center"
                android:textSize="22sp"
                android:fontFamily="@font/comforta_regular"
                android:textColor="@color/yallou"
                android:text="@string/APP_NAME"
                android:id="@+id/c_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </Toolbar>
        <View
            android:layout_below="@+id/toolbar_si"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/toolbar_dropshadow"/>
        <ImageView
            android:src="@drawable/a_main_icon"
            android:layout_width="250dp"
            android:layout_centerInParent="true"
            android:layout_height="250dp" />
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/c_ll"
            android:gravity="center"
            android:layout_below="@id/a_text_reg"
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="30dp"
                app:cardBackgroundColor="@color/yallou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/c_b_sign_in"
                    android:fontFamily="@font/comforta_light"
                    android:onClick="click_buttons"
                    android:padding="4dp"
                    android:background="@color/__picker_item_photo_border_n"
                    android:text="@string/sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="30dp"
                app:cardBackgroundColor="@color/yallou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/c_b_registration"
                    android:onClick="click_buttons"
                    android:fontFamily="@font/comforta_light"
                    android:padding="4dp"
                    android:layout_margin="7dp"
                    android:background="@color/__picker_item_photo_border_n"
                    android:text="@string/registration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>
            <Button
                android:id="@+id/document"
                android:onClick="clickDocument"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:text="@string/documentation"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>