<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.poputchic.android.activities.person_rooms.PersonRoomDriver">
    <RelativeLayout
        android:background="@color/black_100"
        android:id="@+id/toolbar_companion_finish_trav"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/pr_iv_my_travels_c"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/finish_yellow"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="22sp"
            android:id="@+id/activity_person_room_companion_label"
            android:fontFamily="@font/comforta_light"
            android:textColor="@color/yallou"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/pr_iv_edit_profile_c"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/edit"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/toolbar_companion_finish_trav"
        android:id="@+id/scroll_private_room_driver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="20dp"
                android:id="@+id/pr_CIV_image_companion"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher_background"
                android:layout_width="180dp"
                android:layout_height="180dp" />
            <TextView
                android:id="@+id/pr_tv_name_c"
                android:fontFamily="@font/comforta_regular"
                android:layout_marginTop="10dp"
                android:textColor="@color/black_100"
                android:textSize="20sp"
                tools:text="Игорь Иванов"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pr_tv_years_c"
                android:fontFamily="@font/comforta_light"
                android:textSize="16sp"
                tools:text="36 лет"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pr_tv_email_c"
                android:fontFamily="@font/comforta_light"
                android:textSize="16sp"
                android:textColor="@color/black_50"
                tools:text="example@gmail.com"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pr_tv_number_phone_c"
                android:fontFamily="@font/comforta_light"
                android:textSize="16sp"
                android:textColor="@color/black_50"
                tools:text="+5478852144"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pr_tv_about_c"
                android:textSize="16sp"
                android:fontFamily="@font/comforta_light"
                android:textColor="@color/black_50"
                tools:text="+5478852144"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black_100">
            </View>
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/comforta_regular"
                android:textColor="@color/black_50"
                tools:text="Отзывы"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ListView
                android:id="@+id/pr_lv_reviews_c"
                android:divider="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/private_room_progress_bar_c"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
