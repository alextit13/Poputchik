<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.poputchic.android.activities.person_rooms.EditDriverProfile">
    <ScrollView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_driver_name"
                android:fontFamily="@font/comforta_light"
                android:hint="@string/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_driver_email"
                android:fontFamily="@font/comforta_light"
                android:hint="@string/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_driver_year"
                android:fontFamily="@font/comforta_light"
                android:hint="@string/year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_driver_phone"
                android:fontFamily="@font/comforta_light"
                android:hint="@string/number_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_driver_auto"
                android:fontFamily="@font/comforta_light"
                android:hint="@string/car_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_driver_auto_year"
                android:fontFamily="@font/comforta_light"
                android:hint="@string/car_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_driver_card"
                android:fontFamily="@font/comforta_light"
                android:hint="@string/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_driver_about"
                android:fontFamily="@font/comforta_light"
                android:hint="@string/about_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/b_driver_cancel"
                    android:fontFamily="@font/comforta_light"
                    android:layout_margin="3dp"
                    android:background="@color/yallou"
                    android:text="@string/cancel"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/b_driver_save"
                    android:fontFamily="@font/comforta_light"
                    android:layout_margin="3dp"
                    android:background="@color/yallou"
                    android:text="@string/ok"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TextView
                android:id="@+id/hint_text_rating"
                android:fontFamily="@font/comforta_light"
                android:textColor="#060606"
                android:textSize="8sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
