<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/a_fl_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.reg_and_sign.SignIn">
    <ImageView
        android:id="@+id/image_back_signIn"
        android:src="@drawable/background"
        android:scaleType="center"
        android:scaleX="10"
        android:scaleY="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ScrollView
        android:id="@+id/scroll_sigm"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Toolbar
                android:id="@+id/toolbar_reg"
                android:background="#3000"
                android:elevation="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:layout_gravity="center"
                    android:textSize="22sp"
                    android:fontFamily="@font/comforta_regular"
                    android:textColor="@color/yallou"
                    android:text="@string/APP_NAME"
                    android:id="@+id/a_toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </Toolbar>
            <View
                android:id="@+id/shadow_sign"
                android:layout_below="@+id/toolbar_reg"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/toolbar_dropshadow"/>

            <TextView
                android:id="@+id/a_text_reg"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_below="@id/shadow_sign"
                android:textColor="@color/black_100"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/comforta_regular"
                android:text="@string/sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:padding="10dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:background="#3fff"
                android:layout_below="@id/a_text_reg"
                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/enter_your_data"
                    android:text="@string/enter_your_data"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/b_et_email"
                    android:inputType="textEmailAddress"
                    android:hint="@string/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/b_et_password"
                    android:inputType="textPassword"
                    android:hint="@string/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content">
                    <Button
                        android:onClick="click_buttons"
                        android:id="@+id/b_b_sign_in"
                        android:text="@string/sign_in"
                        android:background="@color/yallou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/pb_sign_in"
        app:indicatorName="BallRotateIndicator"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>
