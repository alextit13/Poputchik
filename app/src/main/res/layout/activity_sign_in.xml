<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/a_fl_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.poputchic.android.reg_and_sign.SignIn">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:textSize="25sp"
                android:fontFamily="@font/lobster"
                android:textColor="@color/yallou"
                android:text="@string/APP_NAME"
                android:id="@+id/a_toolbar"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/black_50">
            </TextView>
            <ImageView
                android:layout_below="@id/a_toolbar"
                android:src="@color/yallou"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
            <TextView
                android:id="@+id/a_text_reg"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_below="@id/a_toolbar"
                android:textColor="@color/black_100"
                android:textSize="30sp"
                android:fontFamily="@font/el_messiri_regular"
                android:text="@string/sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:background="#fff"
                android:layout_below="@id/a_text_reg"
                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/enter_your_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/b_et_email"
                    android:inputType="textEmailAddress"
                    android:hint="@string/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/b_et_password"
                    android:inputType="textPassword"
                    android:hint="@string/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TableRow
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp">
                    <ImageView
                        android:onClick="click_buttons"
                        android:id="@+id/b_iv_back"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/icon_left"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <Button
                        android:onClick="click_buttons"
                        android:id="@+id/b_b_sign_in"
                        android:layout_marginBottom="10dp"
                        android:text="@string/sign_in"
                        android:background="@color/yallou"
                        android:layout_width="150dp"
                        android:layout_height="50dp"/>
                </TableRow>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>
