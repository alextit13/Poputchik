<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.poputchic.android.activities.DetailViewTravel">
    <ImageView
        android:id="@+id/toolbar_my_travels"
        android:background="@color/black_100"
        android:layout_width="match_parent"
        android:layout_height="70dp" />
    <ImageView
        android:id="@+id/back_button_my_travels"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/icon_left_yellow"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/activity_detail_view_travel_logo"
        android:fontFamily="@font/comforta_light"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:textColor="@color/yallou"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_below="@id/toolbar_my_travels"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/reviews_about_users"
            android:textSize="20sp"
            android:fontFamily="@font/comforta_light"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textColor="@color/black_100"
            android:text="Отзывы о водителе"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/face_driver"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <TextView
            android:textSize="20sp"
            android:fontFamily="@font/comforta_light"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textColor="@color/black_100"
            tools:text="Иванов Иван Иванович"
            android:id="@+id/text_driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ListView
            android:id="@+id/list_review_about_driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>
</RelativeLayout>
