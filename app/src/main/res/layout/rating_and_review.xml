<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/background"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:textColor="@color/black_100"
        android:gravity="center"
        android:text="@string/rat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/r_RAR_1"
            android:layout_margin="2dp"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@color/yallou"
            android:text="1"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/r_RAR_2"
            android:layout_margin="2dp"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@color/yallou"
            android:text="2"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/r_RAR_3"
            android:layout_margin="2dp"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@color/yallou"
            android:text="3"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/r_RAR_4"
            android:layout_margin="2dp"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@color/yallou"
            android:text="4"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/r_RAR_5"
            android:layout_margin="2dp"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@color/yallou"
            android:text="5"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </TableRow>

    <View
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/black_100"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:textColor="@color/black_100"
        android:gravity="center"
        android:text="@string/rew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:padding="3dp"
        android:id="@+id/review_RAR"
        android:gravity="top"
        android:hint="@string/add_review"
        android:background="#e9e8e8"
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <TableRow
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/cancel_RAR"
            android:text="@string/cancel"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/save_RAR"
            android:text="@string/save"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </TableRow>

</LinearLayout>