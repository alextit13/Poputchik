<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/main_container_hint"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_margin="5dp"
    android:padding="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_driver_L"
            tools:src="@drawable/edit"
            android:layout_margin="5dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_companion_L"
                android:fontFamily="@font/comforta_regular"
                android:textAlignment="center"
                android:textSize="20sp"
                android:lines="1"
                android:textColor="@color/black_100"
                tools:text="Иванов Степан, 28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textAlignment="center"
                android:fontFamily="@font/comforta_light"
                android:id="@+id/about_driver_L"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black_100"
                tools:text="Спокойный парень, люблю путешествовать! Буду благодарен за попутку!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/phone_driver_L"
                android:fontFamily="@font/comforta_light"
                android:textColor="@color/black_50"
                android:textAlignment="center"
                android:lines="1"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                tools:text="+375259954872"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/black_50"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:textAlignment="center"
        android:textSize="20sp"
        android:lines="1"
        android:fontFamily="@font/comforta_regular"
        android:textColor="@color/black_100"
        tools:text="Поездка"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">
        <TextView
            android:id="@+id/travel_from_L"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="16sp"
            tools:text="Москва, ул. Чкалова 2"
            android:fontFamily="@font/comforta_light"
            android:textColor="@color/black_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/travel_to_L"
            android:gravity="center"
            android:fontFamily="@font/comforta_light"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="16sp"
            tools:text="Москва, ул. Чкалова 2"
            android:textColor="@color/black_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TextView
        android:id="@+id/cost_L"
        tools:text="50 р"
        android:textColor="@color/yallou_100"
        android:textStyle="bold"
        android:fontFamily="@font/comforta_regular"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_ok_hide"
            android:fontFamily="@font/comforta_light"
            android:layout_margin="3dp"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Colored"
            android:gravity="center"
            android:text="Скрыть"
            android:textColor="@color/black_50"
            android:layout_width="match_parent"
            android:layout_height="53dp"/>
        <android.support.v7.widget.CardView
            android:id="@+id/button_ok_L"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/yallou"
            android:layout_height="40dp"
            app:cardElevation="4dp">
            <TextView
                android:text="Взять попутчика"
                android:id="@+id/text_take_companion"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
    </TableRow>

</LinearLayout>