<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:layout_margin="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_driver_L"
            tools:src="@drawable/edit"
            android:layout_margin="3dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_companion_L"
                android:textAlignment="center"
                android:textSize="22sp"
                android:lines="1"
                android:textColor="@color/black_100"
                tools:text="Иванов Степан, 28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textAlignment="center"
                android:id="@+id/about_driver_L"
                android:textColor="@color/black_100"
                tools:text="Спокойный парень, люблю путешествовать! Буду благодарен за попутку!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/phone_driver_L"
                android:textColor="@color/black_50"
                android:textAlignment="center"
                android:lines="1"
                android:textSize="18sp"
                tools:text="+375259954872"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/black_50"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:textAlignment="center"
        android:textSize="22sp"
        android:lines="1"
        android:textColor="@color/black_100"
        tools:text="Поездка"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/travel_from_L"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="18sp"
            tools:text="Москва, ул. Чкалова 2"
            android:textColor="@color/black_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/travel_to_L"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="18sp"
            tools:text="Москва, ул. Чкалова 2"
            android:textColor="@color/black_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TextView
        android:id="@+id/cost_L"
        android:background="@color/yallou"
        tools:text="50 р"
        android:textColor="@color/black_100"
        android:textSize="23sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_ok_L"
        android:layout_margin="3dp"
        android:background="@color/green"
        android:drawableLeft="@drawable/ok"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Принять"
        android:textColor="@color/black_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>