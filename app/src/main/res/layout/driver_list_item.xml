<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/back"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:padding="8dp"
    android:layout_margin="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linear_about_driver"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView_c"
            android:layout_margin="2dp"
            tools:src="@drawable/a_main_icon"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:textColor="@color/black_100"
                android:lines="1"
                android:gravity="center"
                tools:text="Иванов Иван, 35 лет"
                android:id="@+id/name_driver_and_year_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:lines="1"
                tools:text="BMW 3-Series 2014"
                android:id="@+id/car_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:lines="1"
                tools:text="+89734375"
                android:id="@+id/number_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/start_rating"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:textColor="@color/black_50"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    tools:text="4.3"
                    android:id="@+id/rating_driver_c"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/chat"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
                <TextView
                    android:textColor="@color/black_50"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    tools:text="7"
                    android:id="@+id/review_driver_c"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:gravity="end"
            android:layout_margin="4dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="end"
                android:src="@drawable/finish"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="18dp"
                android:textColor="@color/black_100"
                android:gravity="center"
                android:layout_gravity="center"
                android:lines="1"
                tools:text="5"
                android:id="@+id/finish_travels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_below="@id/linear_about_driver"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="4dp"
        android:id="@+id/spacer_1"
        android:background="@color/black_100"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <TextView
        tools:text="25 января 2018"
        android:textSize="24sp"
        android:textColor="@color/black_100"
        android:textAlignment="center"
        android:layout_below="@id/spacer_1"
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TableRow
        android:layout_below="@id/tv_date"
        android:id="@+id/tr_from_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="3dp"
            tools:text="Минск"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/black_50"
            android:id="@+id/d_tv_from"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/go_from_to"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="3dp"
            tools:text="Москва"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/black_50"
            android:id="@+id/d_tv_to"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableRow>
    <View
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="4dp"
        android:layout_below="@id/tr_from_to"
        android:id="@+id/spacer"
        android:background="@color/black_100"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:textColor="@color/yallou_100"
        tools:text="Свободно мест: 3/3"
        android:layout_marginStart="20dp"
        android:textAlignment="viewStart"
        android:id="@+id/places"
        android:layout_below="@id/spacer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="3dp"
        android:textSize="18sp"
        android:textColor="@color/black_50"
        android:textAlignment="center"
        tools:text="Выезд от станции метро Восток..."
        android:layout_below="@id/places"
        android:id="@+id/d_tv_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/add_to_company"
        android:src="@drawable/add"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_width="50dp"
        android:layout_height="50dp" />
</RelativeLayout>